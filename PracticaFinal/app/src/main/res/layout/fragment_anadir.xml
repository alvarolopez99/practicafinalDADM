<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:visibility="visible"
    tools:context=".FragmentAnadir">

    <LinearLayout
        android:layout_width="363dp"
        android:layout_height="433dp"
        android:background="@drawable/background"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/salirescoger"
                android:layout_width="67dp"
                android:layout_height="71dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/salirxml" />

            <EditText
                android:id="@+id/idEditText_nombre2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="76dp"
                android:layout_marginTop="84dp"
                android:ems="10"
                android:hint="Introduzca su nombre"
                android:inputType="textPersonName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="236dp"
                android:layout_height="73dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="24dp"
                android:text="CreaciÃ³n de perfil"
                android:textSize="30sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/mujer"
                android:layout_width="65dp"
                android:layout_height="66dp"
                android:layout_marginStart="112dp"
                android:layout_marginTop="196dp"
                android:src="@drawable/mujerxml"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/hombre"
                android:layout_width="66dp"
                android:layout_height="65dp"
                android:layout_marginStart="184dp"
                android:layout_marginTop="196dp"
                android:src="@drawable/hombrexml"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/infofoto"
                android:layout_width="340dp"
                android:layout_height="32dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="396dp"
                android:text="No se ha seleccionado ninguna foto de perfil"
                android:textSize="16sp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="396dp"
                android:text="Ya existe un usuario con ese nombre"
                android:textSize="18sp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/infousuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginTop="396dp"
                android:text="No se ha escogido un nombre de usuario"
                android:textSize="18sp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="76dp"
                android:layout_marginTop="152dp"
                android:text="Perfiles por defecto"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/tomarFoto"
                android:layout_width="179dp"
                android:layout_height="39dp"
                android:layout_marginStart="92dp"
                android:layout_marginTop="276dp"
                android:src="@drawable/tomarfotoxml"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/finalizar"
                android:layout_width="177dp"
                android:layout_height="41dp"
                android:layout_marginStart="96dp"
                android:layout_marginTop="336dp"
                android:src="@drawable/finalizarxml"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</FrameLayout>