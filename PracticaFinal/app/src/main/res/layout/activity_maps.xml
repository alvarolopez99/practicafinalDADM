<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <fragment
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.practicafinal.MapsActivity" />

    <Button
        android:id="@+id/id_Satelite"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Satélite" />

    <Button
        android:id="@+id/id_Hibrido"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="232dp"
        android:text="Híbrido" />

    <Button
        android:id="@+id/id_Normal"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="95dp"
        android:text="Normal" />

    <Button
        android:id="@+id/id_Terreno"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="22dp"
        android:text="Terreno" />

</RelativeLayout>

