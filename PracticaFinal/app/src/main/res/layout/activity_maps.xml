<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.practicafinal.MapsActivity" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/id_Twitter"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="110dp"
            android:layout_marginBottom="70dp"
            android:background="@drawable/twitter"
            map:layout_constraintBottom_toBottomOf="parent"
            map:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/id_Facebook"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="21dp"
            android:layout_marginEnd="21dp"
            android:layout_marginBottom="70dp"
            android:background="@drawable/facebook"
            map:layout_constraintBottom_toBottomOf="parent"
            map:layout_constraintEnd_toStartOf="@+id/id_WhatsApp"
            map:layout_constraintStart_toEndOf="@+id/id_Twitter" />

        <Button
            android:id="@+id/id_WhatsApp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="110dp"
            android:layout_marginBottom="70dp"
            android:background="@drawable/whatsapp"
            map:layout_constraintBottom_toBottomOf="parent"
            map:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/id_Normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:alpha="0.7"
            android:background="@drawable/mapicon"
            android:scaleX="0.5"
            android:scaleY="0.5"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintHorizontal_bias="1.0"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/id_Hibrido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="192dp"
            android:alpha="0.7"
            android:background="@drawable/hibridicon"
            android:scaleX="0.5"
            android:scaleY="0.5"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/id_Satelite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="264dp"
            android:alpha="0.7"
            android:background="@drawable/satelliteicon"
            android:scaleX="0.5"
            android:scaleY="0.5"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/id_Terreno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:alpha="0.7"
            android:background="@drawable/relieveicon"
            android:scaleX="0.5"
            android:scaleY="0.5"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintTop_toTopOf="@+id/id_Normal" />

        <Button
            android:id="@+id/id_Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="152dp"
            android:layout_marginTop="4dp"
            android:alpha="0.7"
            android:background="@drawable/exitbtn"
            android:scaleX="0.7"
            android:scaleY="0.7"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tTemperatura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="104dp"
            android:background="#70555555"
            android:text="0.0 ÂºC"
            android:textColor="#FFFFFF"
            android:textSize="36sp"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/id_Flecha"
            android:layout_width="97dp"
            android:layout_height="64dp"
            android:layout_marginStart="160dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/flecha"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>

